<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
    tools:context="ie.ul.csis.cs4084_project.MainMenu"
    android:screenOrientation="portrait">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:contentDescription="Background"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <Button
        android:id="@+id/buttonTilt"
        android:layout_width="74dp"
        android:layout_height="43dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:onClick="toTiltMenu"
        android:text="Tilt"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonInp"
        android:layout_width="75dp"
        android:layout_height="52dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="116dp"
        android:onClick="toInputMenu"
        android:text="Input"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonVol"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="232dp"
        android:onClick="toVolumeMenu"
        android:text="Volume"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTime"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="368dp"
        android:onClick="toTimeMenu"
        android:text="Time"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
